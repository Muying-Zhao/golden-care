
.tabs {
  margin-top: -5rpx;
  width: 100%;
  height: 130rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 30rpx 0 30rpx;
}

.tabs_items {
  display: flex;
  height: 110rpx;
}

.tabs_item {
  width: 30%;
  position: relative;
}

.tabs_item_labe {
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: #696969;
  font-weight: bold;
}
.tabs_item_labe-active{
  color: #6faf92;
}

.tabs_item_labe_act {
  color: #333;
}

.divider {
  position: absolute;
  left: 16rpx;
  top: 32rpx;
  height: 45rpx;
  width: 6rpx;
  background: #6faf92;
  border-radius: 5rpx;
}