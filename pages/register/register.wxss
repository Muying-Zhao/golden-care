.wrapper{
  width: 100%;
  height: 100%;
}
.register{
  padding: 10rpx 20rpx;
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.register__item{
  width: 48%;
  padding: 20rpx 0;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.register__item__icon{
  width: 120rpx;
  height: 120rpx;
}
.register__item__card{
  height: 70rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.register__item__btn{
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #941f31;
  border-radius: 35rpx;
  border: 1rpx solid #941f31;
}