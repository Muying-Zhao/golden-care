.container {
  padding-bottom: 200rpx;
  position: relative;
}

.header {
  box-sizing: border-box;
  height: 400rpx;
  background: linear-gradient(to bottom, #6faf92, #c5e5cd);
  padding: 30rpx 30rpx;
  border-bottom-right-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  margin-bottom: 130rpx;
}

.banner {
  position: absolute;
  top: 250rpx;
  width: 100%;
  height: 280rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eeeeee;
}

.content {
  background: #fff;
  margin: 0 30rpx;
  height: 100%;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  display: flex;
}

.content_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content_item_img {
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content_item_img_pic {
  width: 130rpx;
}

.content_item_title {
  width: 100%;
  flex: 1;
  text-align: center;
  font-weight: bold;
  font-size: 32rpx;
  color: #97606e;
}

.main {
  padding: 0rpx 30rpx;
}

.main_item {
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 1rpx solid #eeeeee;
}

.main_item_icon {
  width: 15%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.main_item_icon_pic {
  width: 50rpx;
  height: 50rpx;
}

.main_item_text {
  flex: 1;
  height: 100%;
  line-height: 150rpx;
}

.main_item_img {
  width: 10%;
  height: 100%;
}
.main_item_img_pic{
  width: 35rpx;
  height: 35rpx;
  color: #9da1b1;
}