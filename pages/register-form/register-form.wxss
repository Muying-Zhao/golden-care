page{
  background: #fff;
}
.wrapper{
  height: 100%;
  background: #fff;
  padding: 0 30rpx;
}
.title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  color: #333;
}
.title__emp{
  width: 15rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background: #6faf92;
  margin-right: 15rpx;
}
.form{
  width: 100%;
}
.form__item{
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  height: 110rpx;
}
.form__item-err{
  position: absolute;
  bottom: 0rpx;
  width: 200rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: rgb(255, 0, 64);
  left: 33%;
}
.form__item__picker{
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.form__item__title{
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #333;
}
.form__item__text{
  width: 70%;
  position: relative;
}
.form__item__radio{
  width: 70%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.form__item__input{
  height: 90rpx;
  line-height: 90rpx;
  background: #f3f3f3;
  color: #333;
  font-size: 32rpx;
  padding-left: 20rpx;
  border-radius: 15rpx;
}
.placeholder{
  color: #666;
  line-height: 90rpx;
}
.tips{
  width: 100%;
  color: #50a8be;
}
.footer{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.btn__cancel{
  background: #fff;
  border: 1rpx solid #f3f3f3;
  border-radius: 15rpx;
  height: 90rpx;
  width: 300rpx;
  line-height: 90rpx;
  text-align: center;
  color: #666;
}
.btn__confirm{
  background: #6faf92;
  border: 1rpx solid #f3f3f3;
  border-radius: 15rpx;
  height: 90rpx;
  width: 300rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
}