page{
  background: #f4f4f4;
}
.layout {
  height: 100%;
  background: #f4f4f4;
}
.panel__item{
  padding: 0 30rpx;
  height: 380rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background: #fff;
}
.panel__item__info{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.panel__item__info__status{
  font-size: 32rpx;
  color: #fe4b63;
}
.panel__item__main{
  width: 100%;
  height: 190rpx;
  display: flex;
}
.panel__item__main__pic{
  width: 210rpx;
  height: 190rpx;
}
.panel__item__main__info{
  flex: 1;
  height: 190rpx;
  padding-left: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.panel__item__main__info__title{
  width: 100%;
  font-size: 34rpx;
  color: #333;
}
.panel__item__main__info__price{
  width: 100%;
  color: #ff0000;
}
.panel__item__main__info__price__num{
  font-size: 34rpx;
}
.panel__item__footer{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}
.panel__item__footer__status{
  margin-left: 20rpx;
  padding: 10rpx 15rpx;
  border-radius: 15rpx;
  color: #fe4b63;
  border: 1rpx solid #fe4b63;
}
.emp{
  width: 100%;
  height: 100%;
  text-align: center;
  padding-top: 300rpx;
}